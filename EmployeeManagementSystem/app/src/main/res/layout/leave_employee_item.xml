<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:paddingStart="8dp"
    android:paddingEnd="8dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal">

    <TextView
        android:layout_weight="1"
        android:id="@+id/tv_leave_application_id"
        tools:text="@tools:sample/cities"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_weight="1"
        android:id="@+id/tv_leave_employee_id"
        tools:text="@tools:sample/date/hhmm"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>


    <TextView
        android:layout_weight="1"
        android:id="@+id/tv_leave_application_year"
        tools:text="@tools:sample/date/hhmm"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_weight="1"
        android:id="@+id/tv_leave_application_month"
        tools:text="@tools:sample/date/hhmm"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>


    <TextView
        android:layout_weight="1"
        android:id="@+id/tv_leave_application_day"
        tools:text="@tools:sample/date/hhmm"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_weight="1"
        android:id="@+id/tv_leave_application_status"
        tools:text="@tools:sample/full_names"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>



    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/iv_check"
        android:padding="8dp"
        android:src="@drawable/ic_baseline_check_24"/>



    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/iv_cancel"
        android:padding="8dp"
        android:src="@drawable/ic_baseline_cancel_24"/>

</LinearLayout>